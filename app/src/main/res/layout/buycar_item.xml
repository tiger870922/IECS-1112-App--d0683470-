<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="80sp"
            android:layout_weight="3"
            app:cardCornerRadius="10sp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/img_buycarlist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/fried3"/>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_marginStart="15sp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/img_buycarlist_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="麥克雞塊"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/img_buycarlist_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="要番茄醬包"
                    android:textColor="@color/black"
                    android:textSize="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/txt_buycarlist_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="$ 50"
                        android:textSize="@dimen/home_item_title"
                        android:textColor="#FF543B"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/img_buycarlist_mini"
                            android:layout_width="30sp"
                            android:layout_height="25sp"
                            android:src="@drawable/mini"/>

                        <TextView
                            android:id="@+id/txt_buycarlist_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="1"
                            android:textSize="@dimen/home_item_title"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_marginHorizontal="@dimen/divider"/>

                        <ImageView
                            android:id="@+id/img_buycarlist_add"
                            android:layout_width="30sp"
                            android:layout_height="25sp"
                            android:src="@drawable/add"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_line2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/item_line1"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:background="#AAAAAA"
        android:orientation="vertical" />



</LinearLayout>