<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:orientation="vertical"
    android:padding="10sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/item_line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="80sp"
                android:layout_weight="3"
                app:cardCornerRadius="10sp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/hambuger1"/>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:layout_marginStart="15sp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="雙層麥香雞堡"
                        android:textColor="@color/black"
                        android:textSize="20dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="$ 50"
                            android:textSize="@dimen/home_item_title"
                            android:textColor="#FF543B"
                            android:textStyle="bold"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/detail_cart_item_mini"
                                android:layout_width="30sp"
                                android:layout_height="25sp"
                                android:src="@drawable/mini"/>

                            <TextView
                                android:id="@+id/detail_cart_item_cnt"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="1"
                                android:textSize="@dimen/home_item_title"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:layout_marginHorizontal="@dimen/divider"/>

                            <ImageView
                                android:id="@+id/detail_cart_item_add"
                                android:layout_width="30sp"
                                android:layout_height="25sp"
                                android:src="@drawable/add"/>

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_line2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#AAAAAA"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"
            android:layout_below="@+id/item_line1"
            android:orientation="vertical"/>

        <LinearLayout
            android:id="@+id/item_line3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_line2">

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="80sp"
                android:layout_weight="3"
                app:cardCornerRadius="10sp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/fried3"/>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:layout_marginStart="15sp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="麥克雞塊"
                        android:textColor="@color/black"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="要番茄醬包"
                        android:textColor="@color/black"
                        android:textSize="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/detail_cart_item_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="$ 50"
                            android:textSize="@dimen/home_item_title"
                            android:textColor="#FF543B"
                            android:textStyle="bold"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="30sp"
                                android:layout_height="25sp"
                                android:src="@drawable/mini"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="1"
                                android:textSize="@dimen/home_item_title"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:layout_marginHorizontal="@dimen/divider"/>

                            <ImageView
                                android:layout_width="30sp"
                                android:layout_height="25sp"
                                android:src="@drawable/add"/>

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_line4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#AAAAAA"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"
            android:layout_below="@+id/item_line3"/>

        <LinearLayout
            android:id="@+id/item_line5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_line4">

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="80sp"
                android:layout_weight="3"
                app:cardCornerRadius="10sp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/sprite"/>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:layout_marginStart="15sp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="雪碧"
                        android:textColor="@color/black"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="少冰"
                        android:textColor="@color/black"
                        android:textSize="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="$ 30"
                            android:textSize="@dimen/home_item_title"
                            android:textColor="#FF543B"
                            android:textStyle="bold"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="30sp"
                                android:layout_height="25sp"
                                android:src="@drawable/mini"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="1"
                                android:textSize="@dimen/home_item_title"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:layout_marginHorizontal="@dimen/divider"/>

                            <ImageView
                                android:layout_width="30sp"
                                android:layout_height="25sp"
                                android:src="@drawable/add"/>

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_line6"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#AAAAAA"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"
            android:layout_below="@+id/item_line5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="外送費 : $ 35"
                android:textColor="@color/black"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="總計 : $ 165"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_keepGo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="繼續選購"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"/>

                <Button
                    android:id="@+id/btn_ok"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="送出"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>



        </LinearLayout>

    </RelativeLayout>

</LinearLayout>